<UserControl x:Class="MediaFileManager.Desktop.Views.AudioFilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaFileManager.Desktop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox x:Name="FilesListBox" />

        <Button x:Name="LoadFilesButton"
                Content="Load Files"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom" 
                Margin="10"
                Click="LoadFilesButton_Click"/>

        <Button x:Name="UpdateTagsButton"
                Content="Update Tags"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="10"
                Click="UpdateTagsButton_Click" />
    </Grid>
</UserControl>
